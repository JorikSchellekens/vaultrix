{
  "manifest_version": 3,
  "name": "Vaultrix Vault",
  "version": "0.1.0",
  "description": "Matrix-based password manager",
  "permissions": ["storage", "scripting"],
  "host_permissions": ["https://*/*", "http://localhost/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Vaultrix Vault"
  },
  "options_ui": {
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
